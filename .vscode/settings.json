{
  "editor.minimap.enabled": true,
  "editor.wrappingIndent": "indent",
  "editor.overviewRulerBorder": false,
  "editor.lineHeight": 24,
  "editor.tabSize": 2,
  "[markdown]": {
    "editor.quickSuggestions": {
      "comments": "on",
      "strings": "on",
      "other": "on"
    },
    "editor.quickSuggestionsDelay": 20
  },
  "files.defaultLanguage": "markdown",
  "files.exclude": {
    "**/node_modules": true,
    ".foam/templates": false, //seems to exclude the folder from file tree
  },
  "files.watcherExclude": {
    "**/node_modules": true
  },
  "foam.edit.linkReferenceDefinitions": "off",
  "foam.openDailyNote.titleFormat": "fullDate",
  "foam.graph.style": {
    "background": "#202020",
    "fontSize": 12,
    "lineColor": "white",
    "lineWidth": 0.2,
    "particleWidth": 1.0,
    "highlightedForeground": "#f9c74f",
    "node": {
      "main": "#ffffff",
      "basic-note": "#2be0d7",
      "daily-note": "#187d78",
      "tag": "#c82be0",
      "monthly-planner": "#2189eb",
      "yearly-planner": "#d5ebea",
      "guide": "#dfff33",
      "quick-ref": "#cc8221",
    }
  },
  "git.enableSmartCommit": true,
  "git.postCommitCommand": "sync",
  "markdown.preview.breaks": true,
  "markdown.styles": [
    "00.assets/css/custom.css"
  ],
  "markdown.extension.toc.levels": "2..6",
  "module-templates.engine": "handlebars",
  "module-templates.handlebarsConfig": "./handlebarsjs-config.js",
  "module-templates.templateFiles": ["./module_templates/yearly-planning.module-templates.json"],
  "pasteImage.path": "${projectRoot}/00.assets/attachments/2022",
  "pasteImage.showFilePathConfirmInputBox": true,
  "prettier.singleQuote": false,
  "todo-tree.general.tags": [ //https://github.com/Gruntfuggly/todo-tree/wiki/Configuration-Examples
    "TODO",//todo
    "NOTE",//note
    "HACK",//hacky solution
    "BUG",//broken bug location
    "FIXME",//needs fixing but not a bug
    "[x]",//done task
    "[ ]",//incomplete task
    "[f]",//failed task
    "[c]",//cancelled task
  ],
  "todo-tree.highlights.defaultHighlight": {
    "foreground": "#ffffff",
    "background": "#ff0000",
    "icon": "check",
    "type": "text"
  },
  "todo-tree.highlights.customHighlight": {
    //for fore/back color schemes: <https://www.thoughtco.com/contrasting-foreground-background-colors-4061363>
    "BUG": {
      "foreground": "#ffffff",
      "background":"#4f1d30",
      "icon": "bug",
      "iconColour": "#886270",
      "gutterIcon": true,
    },
    "HACK": {
      "foreground": "#ffffff",
      "background":"#726cde",
      "icon": "plug",
      "iconColour": "#726cde",
      "gutterIcon": true,
    },
    "FIXME": {
      "foreground": "#0c0d0b",
      "background":"#008800",
      "icon": "tools",
      "iconColour": "#ffffff",
      "gutterIcon": true,
    },
    "NOTE": {
      "foreground": "#0c0d0b",
      "background":"#008800",
      "icon": "book",
      "iconColour": "#ffffff",
      "gutterIcon": true,
    },
    "TODO": {
      "foreground": "#0c0d0b",
      "background":"#d9c50f",
      "icon": "plus-circle",
      "iconColour": "#d9c50f",
      "gutterIcon": true,
    },
    "[x]":{//complete
      "foreground": "#64dd17",
      "background":"#008800",
      "icon": "check-circle-fill",
      "iconColour": "#008800",
      "gutterIcon": true,
    },
    "[ ]":{//incomplete
      "foreground": "#f44336",
      "background": "#592c2c",
      "icon": "diamond",
      "iconColour": "#f44336",
      "gutterIcon": true,
    },
    "[f]":{//failed
      "foreground": "#d0c9c5",
      "background": "#91522a",
      "icon": "eye-closed",
      "iconColour": "#ffffff",
      "gutterIcon": true,
    },
    "[c]":{//cancelled
      "foreground": "#d0c9c5",
      "background": "#91522a",
      "icon": "diff-ignored",
      "iconColour": "#91522a",
      "gutterIcon": true,
    },
  },
  "todo-tree.regex.regex": "(//|#|<!--|;|/\\*|^|^\\s*(-|\\d+.))\\s*($TAGS)",//add markdown support: <https://marketplace.visualstudio.com/items?itemName=Gruntfuggly.todo-tree#markdown-support>
  "workbench.colorTheme": "Solarized Dark",
}